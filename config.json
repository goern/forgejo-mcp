{
  "mcpServers": {
    "forgejo": {
      "command": "~/code/forgejo-mcp/forgejo-mcp",
      "args": [
        "--transport", "stdio",
        "--url", "https://example.org"
      ],
      "env": {
        "FORGEJO_URL": "https://example.org",
        "FORGEJO_ACCESS_TOKEN": "<your personal access token>",
        "FORGEJO_DEBUG": "false"
      },
      "disabled": false,
      "alwaysAllow": []
    }
  }
}