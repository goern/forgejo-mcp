{
  "mcpServers": {
    "forgejo": {
      "command": "forgejo-mcp",
      "args": {
        "-t": "stdio",
        "--host": "https://forgejo.com",
        "--token": "<your personal access token>"
      },
      "env": {
        "GITEA_HOST": "https://forgejo.com",
        "GITEA_ACCESS_TOKEN": "<your personal access token>"
      }
    }
  }
}